<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Face Identify</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/fav.png" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a class="navbar-brand" href="http://localhost:60771/IdentifyHome">Identify-Let's Reunite</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="http://localhost:60771/Missing">Missing</a></li>
                    <li><a href="http://localhost:60771/Sighted">Sighted</a></li>
                    <li>@Html.ActionLink("Facial Recognition", "Index", "Home", new { Area = "Faces" }, new { })</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @if (ViewBag.LeftMenu != null)
            {
                @Html.Partial((string)ViewBag.LeftMenu)
                <div class="col-md-8">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }
        </div>
        <hr />
        <footer>
            <p>&copy; 2019 - Identify-Lets Reunite (Beta)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
